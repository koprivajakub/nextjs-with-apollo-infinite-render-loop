{
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "preserve",
    "target": "es2016",
    "module": "esnext",
    "lib": ["dom", "es2017", "es2018.regexp"],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "*": ["./*"]
    }
  }
}
